// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Message {
    id          String   @id @default(cuid())
    fromAgent   String   @map("from_agent")
    toAgent     String   @map("to_agent")
    messageType String   @map("message_type")
    content     String
    taskId      String?  @map("task_id")
    read        Boolean  @default(false)
    createdAt   DateTime @default(now()) @map("created_at")

    // Optional relation to task
    task Task? @relation(fields: [taskId], references: [id])

    @@map("messages")
}

model Project {
    id           String    @id @default(cuid())
    name         String
    description  String?
    requirements String?
    status       String    @default("active")
    createdAt    DateTime  @default(now()) @map("created_at")
    completedAt  DateTime? @map("completed_at")

    // Relations
    tasks Task[]

    @@map("projects")
}

model Task {
    id                 String    @id @default(cuid())
    projectId          String    @map("project_id")
    title              String
    description        String?
    acceptanceCriteria String?   @map("acceptance_criteria")
    assignedTo         String    @default("DEV") @map("assigned_to")
    status             String    @default("pending")
    dependencies       String? // JSON array of task IDs
    filesToModify      String?   @map("files_to_modify") // JSON array of file paths
    estimatedLines     Int?      @map("estimated_lines")
    createdAt          DateTime  @default(now()) @map("created_at")
    startedAt          DateTime? @map("started_at")
    completedAt        DateTime? @map("completed_at")

    // Relations
    project  Project   @relation(fields: [projectId], references: [id])
    messages Message[]

    @@map("tasks")
}
